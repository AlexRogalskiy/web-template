{
	"scenarioName": "Invoke the USER GET api and assert the response",
	"steps": [
		{
			"name": "create_user",
			"url": "/users",
			"operation": "POST",
			"request": {
				"headers": {
					"Content-Type": "application/json; charset=utf-8"
				},
				"body": {
					"active": true,
					"username": "adriana"
				}
			},
			"assertions": {
				"status": 201
			}
		},
		{
			"name": "get_user_details",
			"url": "/users/v1/name/${$.create_user.request.body.username}",
			"operation": "GET",
			"request": {},
			"assertions": {
				"status": 200,
				"body": {
					"active" : true,
					"username" : "adriana",
					"email" : "abc@gmail.com"
				}
			}
		}
	]
}